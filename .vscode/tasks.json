{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "mkdir build; cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make",
            "windows": {
                "command": "cmake -S . -B build && cmake --build build"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
